<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JackpotActivity">


    <Button
        android:id="@+id/btn_sportpesamega"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/teal_700"
        android:text="Sportpesa Mega Jackpot"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_sportpesamini"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_sportpesamini"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:backgroundTint="@color/teal_700"
        android:text="Sportpesa Mini "
        app:layout_constraintBottom_toTopOf="@+id/btn_betikagrand"
        app:layout_constraintEnd_toEndOf="@+id/btn_sportpesamega"
        app:layout_constraintStart_toStartOf="@+id/btn_sportpesamega"
        app:layout_constraintTop_toBottomOf="@+id/btn_sportpesamega" />

    <Button
        android:id="@+id/btn_betikagrand"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/teal_700"
        android:text="Betika Grand JP"
        app:layout_constraintBottom_toTopOf="@+id/btn_betikamid"
        app:layout_constraintEnd_toEndOf="@+id/btn_sportpesamini"
        app:layout_constraintStart_toStartOf="@+id/btn_sportpesamini"
        app:layout_constraintTop_toBottomOf="@+id/btn_sportpesamini" />

    <Button
        android:id="@+id/btn_betikamid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="200dp"
        android:backgroundTint="@color/teal_700"
        android:text="Betika Midweek"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_betikagrand"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_betikagrand"
        app:layout_constraintTop_toBottomOf="@+id/btn_betikagrand" />

    <Button
        android:id="@+id/btn_sporty"
        android:backgroundTint="@color/teal_700"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:text="SPORTYBET JP"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_betikamid"
        app:layout_constraintStart_toStartOf="@+id/btn_betikamid"
        app:layout_constraintTop_toBottomOf="@+id/btn_betikamid" />

</androidx.constraintlayout.widget.ConstraintLayout>